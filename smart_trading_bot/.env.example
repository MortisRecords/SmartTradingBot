# Smart Trading Bot Configuration
# Скопируйте этот файл в .env и заполните своими значениями

# =============================================================================
# TELEGRAM BOT SETTINGS
# =============================================================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username
WEBHOOK_HOST=your_domain.com
WEBHOOK_PORT=8443

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/trading_bot
POSTGRES_PASSWORD=your_postgres_password_here
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# ADMIN SETTINGS
# =============================================================================
ADMIN_IDS=123456789,987654321
SUPER_ADMIN_ID=123456789

# =============================================================================
# COMMISSION SETTINGS
# =============================================================================
REFERRAL_COMMISSION=0.02
MIN_PAYOUT_AMOUNT=50.0

# =============================================================================
# PARTNER PROGRAMS
# =============================================================================

# Binarium
BINARIUM_PARTNER_ID=p43053p136178p011d
BINARIUM_API_KEY=your_binarium_api_key
BINARIUM_SECRET=your_binarium_secret

# PocketOption
POCKET_OPTION_AFFILIATE_ID=OWrYm1TLeFf1Cv
POCKET_OPTION_API_KEY=your_pocket_option_api_key

# =============================================================================
# EXCHANGE APIs
# =============================================================================

# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Other exchanges (optional)
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key

# =============================================================================
# TRADINGVIEW SETTINGS
# =============================================================================
TRADINGVIEW_USERNAME=your_tradingview_username
TRADINGVIEW_PASSWORD=your_tradingview_password

# =============================================================================
# SIGNAL SETTINGS
# =============================================================================
ENABLE_SIGNAL_MONITORING=true
SIGNAL_MONITOR_INTERVAL=300
MIN_SIGNAL_CONFIDENCE=70.0
MAX_SIGNALS_PER_HOUR=12
FREE_SIGNALS_PER_DAY=10

# Monitoring symbols (comma separated)
MONITORING_SYMBOLS=BTC/USDT,ETH/USDT,EUR/USD,GBP/USD,AUD/USD,USD/JPY,XAU/USD

# =============================================================================
# WEB PANEL SETTINGS
# =============================================================================
WEB_PANEL_HOST=0.0.0.0
WEB_PANEL_PORT=5000
WEB_PANEL_SECRET_KEY=your_web_panel_secret_key_here
WEB_PANEL_USERNAME=admin
WEB_PANEL_PASSWORD=your_admin_password_here

# =============================================================================
# API SETTINGS
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_api_secret_key_here

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# =============================================================================
# EMAIL NOTIFICATIONS
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Smart Trading Bot <noreply@yourdomain.com>

# =============================================================================
# SECURITY
# =============================================================================
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# =============================================================================
# PREMIUM FEATURES
# =============================================================================
PREMIUM_SUBSCRIPTION_PRICE=29.99
VIP_SUBSCRIPTION_PRICE=99.99

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *

# AWS S3 для бэкапов (опционально)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BACKUP_BUCKET=your-backup-bucket

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_PASSWORD=your_grafana_password

# =============================================================================
# PAYMENT SYSTEMS (для премиум подписок)
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# Cryptocurrency payments
COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret

# =============================================================================
# SOCIAL MEDIA APIs (для постинга сигналов)
# =============================================================================

# Twitter
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# Telegram Channel
TELEGRAM_CHANNEL_ID=@your_channel_username
TELEGRAM_CHANNEL_TOKEN=your_channel_bot_token

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# SMS notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push notifications
ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_TESTING_MODE=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_WORKERS=4
CACHE_TTL=3600
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# =============================================================================
# LOCALIZATION
# =============================================================================
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en,es,de,fr

# =============================================================================
# CUSTOM FEATURES
# =============================================================================
ENABLE_VIP_SIGNALS=true
ENABLE_COPY_TRADING=false
ENABLE_SOCIAL_TRADING=false
ENABLE_EDUCATIONAL_CONTENT=true

# =============================================================================
# COMPLIANCE
# =============================================================================
ENABLE_KYC=false
ENABLE_GDPR_COMPLIANCE=true
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
PRIVACY_POLICY_URL=https://yourdomain.com/privacy

# =============================================================================
# ADVANCED ANALYTICS
# =============================================================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token
AMPLITUDE_API_KEY=your_amplitude_api_key